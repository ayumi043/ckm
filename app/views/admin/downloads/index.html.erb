<% content_for(:nav)  do %>
  <li>
    <a href="<%= admin_downloads_path %>">下载中心</a>
  </li> 
<% end %>

<div class="row-fluid">

  <div>
     <a href="<%= new_admin_download_path %>" class="btn btn-primary"><i class="icon-plus icon-white"></i> 添加下载</a>
  </div>

  <!-- block -->
  <div class="block">
      <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">下载中心</div>         
      </div>
      <div class="block-content collapse in">
          <table class="table table-striped">
              <thead>
                  <tr>
                      <th>标题</th>
                      <th width="190">添加时间</th>
                      <th width="230">操作</th>
                  </tr>
              </thead>
              <tbody>

                <% @downloads.each do |download| %>
                  <tr>
                    <td><%= download.title %></td>
                    <td><%= download.created_at.strftime('%F %R:%S') %></td>
                    <td>
                      <a href="<%= admin_download_path(download) %>" class="btn btn-mini"><i class="icon-eye-open"></i> 浏览</a>
                        &nbsp;&nbsp;
                        <a href="<%= edit_admin_download_path(download) %>" class="btn btn-primary btn-mini"><i class="icon-pencil icon-white"></i> 编辑</a>
                        &nbsp;&nbsp;
                        <a href="<%= admin_download_path(download) %>" rel="nofollow" data-method="delete" data-confirm="确定要删除吗？" class="btn btn-danger btn-mini"><i class="icon-remove icon-white"></i> 删除</a>

                    </td>                   
                  </tr>
                <% end %>
              
              </tbody>
          </table>
      </div>
  </div>
  <!-- /block -->
</div>  
