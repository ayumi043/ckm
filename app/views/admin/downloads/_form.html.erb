<% content_for(:nav)  do %>
  <li>
    <a href="<%= admin_downloads_path %>">下载中心</a><span class="divider">/</span>
  </li>
  <li>
  <li class="active"><%= @download.title %></li> 
<% end %>


<%= form_for [:admin, @download] do |f| %>

  <% if @download.errors.any? %>
    <div id="error_explanation">
      
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert">&times;</button>
        <strong>错误!</strong> 
        <span>发生了<%= pluralize(@download.errors.count, "") %>个错误！</span>
        <ul>
        <% @download.errors.messages.each do |msg| %>
          <li><%= msg.last.first %></li>
        <% end %>
        </ul>
      </div>

    </div>
  <% end %>

  <% errors = @download.errors.messages %>

  <div class="field">
    <span>
      <%#= f.text_field :title %>
      <input type="text" name="download[title]" value="<%= @download.title %>" />
    </span>
    <span style="color:#f60;"><%= "#{errors[:title].first}" if errors[:title] %></span>
  </div>  

  <div class="field">
    <%= f.label :内容 %>
    <%= f.ueditor_text :content %>
    <span style="color:#f60;"><%= "#{errors[:content].first}" if errors[:content] %></span>
  </div>

  <div class="actions">
    <%= f.submit "确 定" %>
  </div>
<% end %>
