<h1>所有首页模块设置</h1>

<table>
  <th>
    <td>模块名称</td>
    <td>标题</td>
    <td>url</td>
    <td>图片</td>
    <td colspan="3">操作</td>
  </th>
<% @indexsets.each do |indexset| %>
  <tr>
    <td><%= indexset.module %></td>
    <td><%= indexset.title %></td>
    <td><%= indexset.url %></td>
    <td><%= image_tag(indexset.picture) %></td>
    <td><%= link_to 'Show', admin_indexset_path(indexset) %></td>
    <td><%= link_to 'Edit', edit_admin_indexset_path(indexset) %></td>
    <td><%= link_to 'Destroy', admin_indexset_path(indexset), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>



<% content_for(:nav)  do %>
  <li>
    <a href="<%= admin_articles_path %>">新闻资讯</a>
  </li> 
<% end %>

<div class="row-fluid">

  <div>
     <a href="<%= new_admin_article_path %>" class="btn btn-primary"><i class="icon-plus icon-white"></i> 添加新闻</a>
  </div>

  <!-- block -->
  <div class="block">
      <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">新闻资讯</div>         
      </div>
      <div class="block-content collapse in">
          <table class="table table-striped">
              <thead>
                  <tr>
                      <th>标题</th>
                      <th width="90">状态</th>
                      <th width="230">操作</th>
                  </tr>
              </thead>
              <tbody>

                <% @articles.each do |article| %>
                  <tr>
                    <td><%= article.title %></td>
                    <td><%= article.state_name %></td>
                    <td>
                      <a href="<%= admin_article_path(article) %>" class="btn btn-mini"><i class="icon-eye-open"></i> 浏览</a>
                        &nbsp;&nbsp;
                        <a href="<%= edit_admin_article_path(article) %>" class="btn btn-primary btn-mini"><i class="icon-pencil icon-white"></i> 编辑</a>
                        &nbsp;&nbsp;
                        <a href="<%= admin_article_path(article) %>" rel="nofollow" data-method="delete" data-confirm="确定要删除吗？" class="btn btn-danger btn-mini"><i class="icon-remove icon-white"></i> 删除</a>

                    </td>                   
                  </tr>
                <% end %>
              
              </tbody>
          </table>
      </div>
  </div>
  <!-- /block -->
</div>  




  

