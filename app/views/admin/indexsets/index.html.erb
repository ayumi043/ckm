  <div class="block">
      <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">首页模块设置</div>         
      </div>
      <div class="block-content collapse in">
          <table class="table table-striped">
              <thead>
                  <tr>
                      <td width="55">图片</td>
                      <td>模块名称</td>
                      <th>标题</th>
                      <td width="180">url</td>
                      <th width="190">操作</th>
                  </tr>
