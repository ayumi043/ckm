              <tbody>

                <% @indexsets.each do |indexset| %>
                  <tr>
                    <td><%= image_tag(indexset.picture, {:width => "50", :height => "50"}) %></td>
                    <td><%= indexset.module %></td>
                    <td><%= indexset.title %></td>
                    <td><%= indexset.url %></td>
                    <td>
                      <a href="<%= admin_indexset_path(indexset) %>" class="btn btn-mini"><i class="icon-eye-open"></i> 浏览</a>
