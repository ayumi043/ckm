<%= form_for [:admin, @indexset] do |f| %>

  <% if @indexset.errors.any? %>
    <div id="error_explanation">
      
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert">&times;</button>
        <strong>错误!</strong> 
        <span>发生了<%= pluralize(@indexset.errors.count, "") %>个错误！</span>
        <ul>
        <% @indexset.errors.messages.each do |msg| %>
          <li><%= msg.last.first %></li>
        <% end %>
        </ul>
      </div>

    </div>
  <% end %>

  <% errors = @indexset.errors.messages %>

  <div class="field">
    <%= f.label :模块名称 %><br />
    <span><input type="text" name="indexset[module]" value="<%= @indexset.module %>" /></span>
    <span style="color:#f60;"><%= errors[:module].first if errors[:module] %></span>
  </div>

  <div class="field">
    <%= f.label :标题 %><br />
    <%= f.text_field :title %>
    <span style="color:#f60;"><%= errors[:title].first if errors[:title] %></span>
  </div>

  <div class="field">
    <%= f.label :图片 %><br />
    <%= f.file_field :picture %>
    <span style="color:#f60;"><%= "#{errors[:picture].first}" if errors[:picture] %></span>
  </div>

  <div class="field">
    <%= f.label :链接地址 %><br />
    <%= f.text_field :url %>
    <span style="color:#f60;"><%= "#{errors[:url].first}" if errors[:url] %></span>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
