<% if  notice %>
	<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4>操作提示</h4>
  	<%= notice %>
	</div>
<% end %>

<p>
  <b>名称:</b>
  <%= @shop.name %>
</p>

<p>
  <b>所属省份:</b>
  <%= "#{@shop.region.parent.parent.region_name} #{@shop.region.parent.region_name} #{@shop.region.region_name}"  %>
</p>


<p>
  <b>描述:</b>
  <%= raw @shop.description %>
</p>


<%= link_to '编辑', edit_admin_shop_path(@shop) %> |
<%= link_to '返回', admin_shops_path %>