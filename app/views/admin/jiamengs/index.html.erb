
<% content_for(:nav)  do %>
  <li>
    <a href="<%= admin_jiamengs_path %>">走进车快美</a>
  </li> 
<% end %>

<div class="row-fluid">

  <div>
     <a href="<%= new_admin_jiameng_path %>" class="btn btn-primary"><i class="icon-plus icon-white"></i> 添加</a>
  </div>

  <!-- block -->
  <div class="block">
      <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">走进车快美</div>         
      </div>
      <div class="block-content collapse in">
          <table class="table table-striped">
              <thead>
                  <tr>
                      <th width="110">名称</th>
                      <th width="120">状态</th>
                      <th width="120">操作</th>
                  </tr>
              </thead>
              <tbody>

                <% @jiamengs.each do |jiameng| %>
                  <tr>
                    <td><%= jiameng.title %></td>
                    <td><%= jiameng.state_name %></td>
                    <td>
                        <a href="<%= admin_jiameng_path(jiameng) %>" class="btn btn-mini"><i class="icon-eye-open"></i> 浏览</a>
                        <a href="<%= edit_admin_jiameng_path(jiameng) %>" class="btn btn-primary btn-mini"><i class="icon-pencil icon-white"></i> 编辑</a>
                        <a href="<%= admin_jiameng_path(jiameng) %>" rel="nofollow" data-method="delete" data-confirm="确定要删除吗？" class="btn btn-danger btn-mini"><i class="icon-remove icon-white"></i> 删除</a>
                    </td>                   
                  </tr>
                <% end %>
              
              </tbody>
          </table>
      </div>
  </div>
  <!-- /block -->
</div>  