<% content_for(:nav)  do %>
  <li>
    <a href="<%= admin_jiamengs_path %>">走进车快美</a><span class="divider">/</span>
  </li>
  <li>
  <li class="active"><%= @jiameng.title %></li> 
<% end %>

<%= form_for [:admin, @jiameng] do |f| %>

  <% if @jiameng.errors.any? %>
    <div id="error_explanation">
      
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert">&times;</button>
        <strong>错误!</strong> 
        <span>发生了<%= pluralize(@jiameng.errors.count, "") %>个错误！</span>
        <ul>
        <% @jiameng.errors.messages.each do |msg| %>
          <li><%= msg.last.first %></li>
        <% end %>
        </ul>
      </div>

    </div>
  <% end %>

  <% errors = @jiameng.errors.messages %>

<div class="field">
    <span>
      <%= f.text_field :title %>
    </span>
    <span style="color:#f60;"><%= "#{errors[:title].first}" if errors[:title] %></span>
  </div>

  <div class="field">
    <%= f.label :状态 %><br />
    启用:<%= f.check_box :state, :checked => true %>
    <span style="color:#f60;"><%= "#{errors[:state].first}" if errors[:state] %></span>
  </div>

  <div class="field">
    <%= f.ueditor_text :content %>
    <span style="color:#f60;"><%= "#{errors[:content].first}" if errors[:content] %></span>
  </div>

  <div class="actions">
    <%= f.submit '确定' %>
  </div>
<% end %>
