<% content_for(:nav)  do %>
  <li>
    <a href="<%= admin_categories_path %>">产品系列</a><span class="divider">/</span>
  </li>
  <li>
  <li class="active"><%= @category.name %></li> 
<% end %>

<%= form_for [:admin, @category] do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
     
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert">&times;</button>
        <strong>错误!</strong> 
        <span>发生了<%= pluralize(@category.errors.count, "") %>个错误！</span>
        <ul>
        <% @category.errors.messages.each do |msg| %>
          <li><%= msg.last.first %></li>
        <% end %>
        </ul>
      </div>
     
    </div>
  <% end %>
  <div class="field">
    <%= f.label :名称 %>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "确定" %>
  </div>
<% end %>