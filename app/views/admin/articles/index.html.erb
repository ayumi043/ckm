<h1>资讯设置</h1>

<table>
  <th>
    <td>名称</td>
    <td>内容</td>
    <td>状态</td>
    <td>操作</td>
  </th>
<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.content %></td>
    <td><%= article.state_name %></td>
    <td><%= link_to '预览', admin_article_path(article) %></td>
    <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
    <td><%= link_to 'Destroy', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

