<% if  notice %>
	<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4>操作提示</h4>
  	<%= notice %>
	</div>
<% end %>

<p>
  <b>新闻标题:</b>
  <%= @article.title %>
</p>

<p>
  <b>状态:</b>
  <%= @article.state_name %>
</p>

<p>
  <b>新闻内容:</b>
  <%= raw @article.content %>
</p>


<%= link_to '编辑', edit_admin_article_path(@article) %> |
<%= link_to '返回', admin_article_path %>