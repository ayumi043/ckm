                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a tabindex="-1" href="<%= admin_sessions_logout_path %>" data-method="delete">退出</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li <%= raw "class='active'" if params[:controller] == "admin/home" %> >
